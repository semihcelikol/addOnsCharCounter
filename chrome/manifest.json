{
  "manifest_version": 3,
  "name": "Character Counter",
  "version": "1.0",
  "description": "Displays the character count of the selected text.",
  "author": "Semih Ã‡elikol",
  "homepage_url": "https://semihcelikol.com",
  "permissions": [
    "contextMenus",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "96": "icons/icon96.png"
  }
}